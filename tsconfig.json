{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react-jsx",
    "importHelpers": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src/js/components/",
    "typeRoots": ["src/js"]
  },
  "include": [
    "src/js/components/**/*.tsx"
  ],
  "exclude": [
    "src/js/**/*.stories.tsx"
  ]
}
